    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch resource server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "--config=app.yml",
                "resourceserver",
                "--region=au",
                "--num-accounts=100"
            ]
        },
        {
            "name": "Launch usage server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "--config=app.yml",
                "usageserver"
            ]
        },
        {
            "name": "Launch flink client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}